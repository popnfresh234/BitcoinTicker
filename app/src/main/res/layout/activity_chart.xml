<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="0dp"/>



    <TextView
        android:gravity="top"
        android:id="@+id/text_view_detail_price_usd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_heading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3000.00 USD"/>

    <TextView
        android:id="@+id/text_view_detail_price_cad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_subheading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_price_usd"
        tools:text="6000 CAD"/>

    <TextView
        android:id="@+id/text_view_detail_price_btc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_subheading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_price_cad"
        tools:text="1 BTC"/>

    <TextView
        android:id="@+id/text_view_detail_coin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_subheading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_price_btc"
        tools:text="Bitcoin"/>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detail_spin_kit_info"
        style="@style/SpinKitView.Small.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:SpinKit_Color="@color/colorAccentYellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guideline3"
        app:layout_constraintBottom_toBottomOf="@id/text_view_detail_coin_name"/>


    <TextView
        android:id="@+id/text_view_detail_percent_change_one_hour_label"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:text="1H change: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_one_hour"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_percent_change_one_hour_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1%"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_twenty_four_hour_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="24H change: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline75"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_one_hour"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_24_hour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_percent_change_twenty_four_hour_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_one_hour"
        tools:text="2%"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_seven_day_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7D change: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline75"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_24_hour"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_seven_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_percent_change_seven_day_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_24_hour"
        tools:text="3%"/>

    <TextView
        android:id="@+id/text_view_detail_1Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1Y"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toLeftOf="@+id/text_view_detail_6M"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_view_detail_6M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="6M"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_1Y"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toLeftOf="@+id/text_view_detail_3M"/>

    <TextView
        android:id="@+id/text_view_detail_3M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="3M"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_6M"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toLeftOf="@+id/text_view_detail_1M"/>

    <TextView
        android:id="@+id/text_view_detail_1M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1M"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_3M"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toLeftOf="@+id/text_view_detail_1W"/>

    <TextView
        android:id="@+id/text_view_detail_1W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1W"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_1M"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/price_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_1Y"
        app:layout_constraintVertical_bias="1.0"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="264dp"/>"/>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detail_spin_kit_chart"
        style="@style/SpinKitView.Large.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:SpinKit_Color="@color/colorAccentYellow"
        app:layout_constraintLeft_toLeftOf="@id/price_chart"
        app:layout_constraintTop_toTopOf="@id/price_chart"
        app:layout_constraintRight_toRightOf="@id/price_chart"
        app:layout_constraintBottom_toBottomOf="@id/price_chart"/>


</android.support.constraint.ConstraintLayout>