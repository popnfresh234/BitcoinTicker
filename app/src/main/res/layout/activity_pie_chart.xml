<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <android.support.constraint.Guideline
        android:id="@+id/guideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="0dp"/>



    <TextView
        android:gravity="top"
        android:id="@+id/text_view_detail_price_usd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_heading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline50"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3000.00 USD"/>

    <TextView
        android:id="@+id/text_view_detail_price_secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_subheading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline50"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_price_usd"
        tools:text="6000 CAD"/>

    <TextView
        android:id="@+id/text_view_detail_price_btc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_subheading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline50"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_price_secondary"
        tools:text="1 BTC"/>

    <TextView
        android:id="@+id/text_view_detail_coin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_subheading"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline50"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_price_btc"
        tools:text="Bitcoin"/>


    <TextView
        android:id="@+id/text_view_detail_show_small_cap"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Show Small Cap"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toLeftOf="@+id/text_view_detail_hide_small_cap"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_view_detail_hide_small_cap"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Hide Small Cap"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_show_small_cap"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_coin_name"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/text_view_detail_percent_change_one_hour_label"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:text="1H change: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline50"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_one_hour"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_percent_change_one_hour_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1%"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_twenty_four_hour_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="24H change: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline75"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_one_hour"
        app:layout_constraintLeft_toLeftOf="@+id/guideline50"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_24_hour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_percent_change_twenty_four_hour_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_one_hour"
        tools:text="2%"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_seven_day_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7D change: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/guideline75"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_24_hour"
        app:layout_constraintLeft_toLeftOf="@+id/guideline50"/>

    <TextView
        android:id="@+id/text_view_detail_percent_change_seven_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_detail_percent_change_seven_day_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_percent_change_24_hour"
        tools:text="3%"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_detail_show_small_cap"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="264dp"/>"/>




</android.support.constraint.ConstraintLayout>